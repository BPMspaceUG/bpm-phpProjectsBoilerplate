# ============================================
# DEVELOPMENT VERSION (Alpine - Small!)
# Dockerfile.Apache.DEV
# ============================================
FROM php:apache-alpine

ARG ARG_VERSION
ARG ARG_PUSH_SHA
ARG ARG_DATE

ENV IMAGE_DATE=$ARG_DATE \
    IMAGE_VERSION=$ARG_VERSION \
    PUSH_SHA=$ARG_PUSH_SHA \
    APACHE_DOCUMENT_ROOT=/var/www/html/public

# Install dependencies (Development setup - includes dev tools)
RUN apk update && apk add --no-cache \
    libzip-dev \
    unzip \
    wget \
    curl \
    vim \
    nano \
    jq \
    git \
    openssh-client \
    bash \
    && docker-php-ext-install pdo_mysql mysqli zip \
    && docker-php-source delete

# Install Composer
RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');" \
    && php composer-setup.php --quiet \
    && php -r "unlink('composer-setup.php');" \
    && mv composer.phar /usr/local/bin/composer

# Enable Apache modules
RUN sed -i 's/#LoadModule rewrite_module/LoadModule rewrite_module/' /usr/local/apache2/conf/httpd.conf 2>/dev/null || true \
    && sed -i 's/#LoadModule headers_module/LoadModule headers_module/' /usr/local/apache2/conf/httpd.conf 2>/dev/null || true

# Update Apache DocumentRoot to public folder
RUN sed -ri -e 's!/var/www/html!/var/www/html/public!g' /etc/apache2/conf.d/*.conf 2>/dev/null || true \
    && sed -ri -e 's!/var/www/localhost/htdocs!/var/www/html/public!g' /etc/apache2/httpd.conf 2>/dev/null || true

# Create .htaccess support
RUN sed -i '/<Directory "\/var\/www/,/<\/Directory>/ s/AllowOverride None/AllowOverride All/' /etc/apache2/httpd.conf 2>/dev/null || true

# Set permissions
RUN chown -R apache:apache /var/www/html 2>/dev/null || chown -R www-data:www-data /var/www/html 2>/dev/null || true

# Directory for backups
RUN mkdir -p /var/www/redisbackup \
    && chown -R apache:apache /var/www/redisbackup 2>/dev/null || chown -R www-data:www-data /var/www/redisbackup 2>/dev/null || true

# Working directory
WORKDIR /var/www/html

CMD ["httpd-foreground"]
